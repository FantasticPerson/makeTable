@import "../common.styl"

.abc-form-tool-bar-style-editor-container
  width 300px
  margin-left 380px
  margin-top 150px
  position absolute
  border 1px solid #EEE
  background-color #FFF

.abc-form-tool-bar-style-editor-container-header
  height 30px
  background-color #eef6fc

.abc-form-tool-bar-style-editor-container-header-text
  width 180px
  margin-left 10px
  line-height 30px
  color #6998d6

.abc-form-tool-bar-style-editor-confirm-btn
.abc-form-tool-bar-style-editor-cancel-btn
  @extend .abc-common-btn-blue
  width 60px
  height 30px
  line-height 30px
  margin-top 10px
  margin-left 10px

.abc-form-tool-bar-style-editor-cancel-btn
  margin-top -30px
  margin-left 80px
